{
    "name": "papertrain-craft-boilerplate",
    "description": "Papertrain is a Craft 3 Boilerplate - Updated 2018/10/26",
    "version": "2.0.0",
    "author": "Kyle Andrews <kylea@page.works> (https://page.works/)",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/Pageworks/papertrain.git"
    },
    "keywords": [
        "craft cms",
        "craft 3",
        "boilerplate"
    ],
    "bugs": {
        "url": "https://github.com/Pageworks/papertrain/issues",
        "email": "kylea@page.works"
    },
    "scripts": {
        "tsc": "tsc",
        "lint:css": "stylelint app/sass/**/*.scss --cache",
        "lint:ts": "cross-env NODE_ENV=development tslint app/scripts/**/*.ts -c .tslintrc.js -p tsconfig.json -t verbose",
        "lint:svg": "svgo -f ./templates/_svgs",
        "lint": "npm-run-all lint:*",
        "precommit": "lint-staged",
        "compile": "cross-env NODE_ENV=production webpack --config build-tools/config/webpack.config.js",
        "dev": "cross-env NODE_ENV=development webpack --config build-tools/config/webpack.config.dev.js --watch",
        "preview:dev": "webpack-dev-server --config build-tools/config/webpack.config.dev.js",
        "preview": "http-server --p 9001 -s -o"
    },
    "lint-staged": {
        "linters": {
            "app/scripts/**/*.ts": [
                "cross-env NODE_ENV=production tslint -c .tslintrc.js -p tsconfig.json -t verbose"
            ],
            "app/sass/**/*.scss": [
                "stylelint --cache"
            ]
        }
    },
    "dependencies": {
        "fuel-pjax": "https://github.com/Pageworks/fuel-pjax.git#1.0.4",
        "modernizr": "^3.6.0",
        "uuid": "^3.3.2",
        "webpack": "^4.23.1"
    },
    "devDependencies": {
        "@fortawesome/fontawesome-pro": "^5.4.2",
        "autoprefixer": "^9.3.1",
        "awesome-typescript-loader": "^5.2.1",
        "browser-sync": "^2.26.3",
        "browser-sync-webpack-plugin": "^2.2.2",
        "chalk": "^2.4.1",
        "cross-env": "^5.2.0",
        "css-loader": "^1.0.0",
        "cssnano": "^4.1.7",
        "friendly-errors-webpack-plugin": "^1.7.0",
        "http-server": "^0.11.1",
        "husky": "^0.14.3",
        "lint-staged": "^7.3.0",
        "mini-css-extract-plugin": "^0.4.4",
        "node-sass": "^4.9.4",
        "npm-run-all": "^4.1.3",
        "ora": "^3.0.0",
        "postcss-loader": "^3.0.0",
        "sass-loader": "^7.1.0",
        "source-map-loader": "^0.2.4",
        "stylelint": "^9.6.0",
        "stylelint-config-recommended-scss": "^3.2.0",
        "stylelint-scss": "^3.3.2",
        "stylelint-webpack-plugin": "^0.10.5",
        "svgo": "^1.1.1",
        "tslint": "^5.11.0",
        "tslint-config-airbnb": "^5.11.0",
        "tslint-config-prettier": "^1.15.0",
        "typescript": "^3.1.3",
        "uglifyjs-webpack-plugin": "^1.3.0",
        "webpack-cli": "^3.1.2",
        "webpack-dev-server": "^3.1.10"
    }
}
