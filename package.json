{
    "name": "papertrain",
    "description": "Papertrain: a Craft CMS framework",
    "version": "0.3.0",
    "author": "Pageworks",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/Pageworks/papertrain.git"
    },
    "keywords": [
        "craft cms",
        "craft 3",
        "framework",
        "cli",
        "typescript",
        "es modules"
    ],
    "bugs": {
        "url": "https://github.com/Pageworks/papertrain/issues",
        "email": "web@page.works"
    },
    "types": "templates/_layouts/globals.d.ts",
    "scripts": {
        "precommit": "lint-staged",
        "lint:sass": "stylelint  *.scss --cache --config ./build-tools/.stylelintrc --cache-location ./build-tools/.stylelintcache",
        "lint:typescript": "tslint *.ts -c ./build-tools/.tslintrc.js -p ./tsconfig.json -t verbose",
        "webpack": "cross-env NODE_ENV=development webpack --config ./webpack.config.js",
        "tsc": "tsc",
        "create": "node ./build-tools/generator/generate.js",
        "setup": "node ./build-tools/setup/setup.js",
        "preview": "node ./build-tools/sync.js",
        "production": "node ./build-tools/compile.config.js && npm-run-all production:*",
        "production:scripts": "tsc && cross-env NODE_ENV=production webpack --config ./webpack.config.js",
        "production:styles": "cross-env NODE_ENV=production node ./build-tools/sass.config.js",
        "watch": "run-p watch:*",
        "watch:sass": "onchange 'templates/**/*.scss' 'sass/**/*.scss' -- node ./build-tools/sass-watcher.config.js {{changed}}",
        "watch:sync": "node ./build-tools/sync.js",

        "dev": "run-p dev:*",
        "dev:es6": "npm run compile:es6",
        "dev:modules": "npm run compile:modules && node ./build-tools/modules.config.js",

        "compile": "run-p compile:* && npm run bundle",
        "compile:es5": "tsc --p ./tsconfig-es5.json",
        "compile:es6": "tsc --p ./tsconfig.json",
        "compile:modules": "tsc --p ./tsconfig-modules.json",
        "bundle": "node ./build-tools/bundler.config.js && node ./build-tools/modules.config.js"
    },
    "lint-staged": {
        "linters": {
            "./templates/**/*.ts": "npm run lint:typescript",
            "./templates/**/*.scss": "npm run lint:sass",
            "./sass/**/*.scss": "npm run lint:sass"
        }
    },
    "dependencies": {
        "@pageworks/device-manager": "^1.2.3",
        "uuid": "^3.3.2"
    },
    "devDependencies": {
        "browser-sync": "^2.26.7",
        "chalk": "^2.4.2",
        "clear": "^0.1.0",
        "cross-env": "^5.2.0",
        "dotenv": "^6.2.0",
        "figlet": "^1.2.3",
        "glob": "^7.1.4",
        "husky": "^1.3.1",
        "inquirer": "^6.3.1",
        "lint-staged": "^7.3.0",
        "node-sass": "^4.11.0",
        "npm-run-all": "^4.1.5",
        "onchange": "^6.0.0",
        "open": "^6.3.0",
        "ora": "^3.4.0",
        "rimraf": "^3.0.0",
        "rollup": "^1.19.4",
        "rollup-plugin-commonjs": "^10.0.2",
        "rollup-plugin-node-resolve": "^5.2.0",
        "stylelint": "^9.10.1",
        "stylelint-config-recommended-scss": "^3.2.0",
        "stylelint-scss": "^3.8.0",
        "terser-webpack-plugin": "^1.3.0",
        "tslint": "^5.17.0",
        "tslint-config-airbnb": "^5.11.1",
        "tslint-config-prettier": "^1.18.0",
        "typescript": "^3.5.1",
        "webpack": "^4.33.0",
        "webpack-cli": "^3.3.3"
    }
}
