{% switch columnLayout %}
    {% case 1 %}
        <div class="c-complex-content_column o-layout_item">
    {% case 2 %}
        <div class="c-complex-content_column o-layout_item u-1/1 u-1/2@large">
    {% case 3 %}
        <div class="c-complex-content_column o-layout_item u-1/1 u-1/3@large">
    {% case 4 %}
        {% if currentColumn == 1 %}
            <div class="c-complex-content_column o-layout_item u-1/1 u-1/3@large">
        {% else %}
            <div class="c-complex-content_column o-layout_item u-1/1 u-2/3@large">
        {% endif %}
    {% case 5 %}
        {% if currentColumn == 1 %}
            <div class="c-complex-content_column o-layout_item u-1/1 u-2/3@large">
        {% else %}
            <div class="c-complex-content_column o-layout_item u-1/1 u-1/3@large">
        {% endif %}
{% endswitch %}