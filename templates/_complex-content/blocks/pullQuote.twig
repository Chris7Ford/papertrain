{% if block.body|length %}
	<div class="b-quote o-wrapper u-1/1 {{ block.paddingType }}{{ block.paddingSize }}">
		<div class="b-quote_shim o-wrapper">
            {% switch block.quoteStyle %}
                {% case '-large' %}
                    <span class="b-quote_icon">&ldquo;</span>
                    <p class="b-quote_body">{{ block.body }}</p>
                {% case '-block' %}
                    <blockquote class="b-quote_body">{{ block.body }}</blockquote>
            {% endswitch %}
            {% if block.source %}
                <cite class="b-quote_source">
                    - {{ block.source }}
                </cite>
            {% endif %}
        </div>
	</div>
{% endif %}
