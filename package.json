{
    "name": "papertrain",
    "description": "Papertrain: a Craft CMS framework",
    "version": "0.4.0",
    "author": "Pageworks",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/Pageworks/papertrain.git"
    },
    "keywords": [
        "craft cms",
        "craft 3",
        "framework",
        "cli",
        "typescript",
        "es modules",
        "web components",
        "rollupjs"
    ],
    "bugs": {
        "url": "https://github.com/Pageworks/papertrain/issues",
        "email": "web@page.works"
    },
    "types": "templates/globals.d.ts",
    "scripts": {
        "precommit": "lint-staged",
        "lint:sass": "stylelint  *.scss --cache --config ./build-tools/.stylelintrc --cache-location ./build-tools/.stylelintcache",
        "lint:typescript": "tslint ./templates/**/*.ts -c ./build-tools/.tslintrc.js -p ./tsconfig.json -t verbose",
        "lint:typescript-modules": "tslint ./web_modules/*.ts -c ./build-tools/.tslintrc.js -p ./tsconfig-modules.json -t verbose",
        "create": "node ./build-tools/generator/generator.js",
        "setup": "npm run build && node ./build-tools/setup/setup.js",
        "preview": "node ./build-tools/sync.js",
        "watch": "run-p watch:*",
        "watch:sass": "onchange 'templates/**/*.scss' 'sass/**/*.scss' -- node ./build-tools/sass-watcher.config.js {{changed}}",
        "watch:typescript": "tsc --p ./tsconfig-watcher.json --watch",
        "watch:components": "onchange '_watcher/**/*.js' -- node ./build-tools/injector.js",
        "watch:sync": "node ./build-tools/sync.js",
        "bundle": "node ./build-tools/bundler.js",
        "build": "npm run prep && tsc --p ./tsconfig.json && node ./build-tools/script-scrubber.js && node ./build-tools/sass.config.js && npm run cleanup",
        "compile": "npm run build",
        "dev": "npm run build",
        "production": "npm run build && npm-run-all ie:*",
        "prep": "node ./build-tools/prep.config.js",
        "cleanup": "node ./build-tools/cleanup.config.js",
        "ie:scrub": "node ./build-tools/ie-script-scrubber.js",
        "ie:compile": "tsc --p ./tsconfig-ie11.json",
        "ie:workers": "tsc --p ./tsconfig-ie11-workers.json"
    },
    "lint-staged": {
        "linters": {
            "./templates/**/*.ts": "npm run lint:typescript",
            "./templates/**/*.scss": "npm run lint:sass",
            "./sass/**/*.scss": "npm run lint:sass"
        }
    },
    "dependencies": {
        "@pageworks/device-manager": "^1.2.3",
        "uuid": "^3.3.3"
    },
    "devDependencies": {
        "browser-sync": "^2.26.7",
        "chalk": "^2.4.2",
        "clear": "^0.1.0",
        "dotenv": "^6.2.0",
        "figlet": "^1.2.4",
        "glob": "^7.1.5",
        "husky": "^1.3.1",
        "inquirer": "^6.5.2",
        "lint-staged": "^7.3.0",
        "node-sass": "^4.13.0",
        "npm-run-all": "^4.1.5",
        "onchange": "^6.1.0",
        "open": "^6.3.0",
        "ora": "^3.4.0",
        "rimraf": "^3.0.0",
        "rollup": "^1.26.3",
        "rollup-plugin-commonjs": "^10.1.0",
        "rollup-plugin-node-resolve": "^5.2.0",
        "stylelint": "^9.10.1",
        "stylelint-config-recommended-scss": "^3.2.0",
        "stylelint-scss": "^3.12.1",
        "tslint": "^5.20.1",
        "tslint-config-airbnb": "^5.11.2",
        "tslint-config-prettier": "^1.18.0",
        "typescript": "^3.7.2"
    }
}
